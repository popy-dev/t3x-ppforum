<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<configuration>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_config</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<!-- pidlist/startingpoint field -->
					<pidlist>
						<TCEforms>
							<label>LLL:EXT:lang/locallang_general.php:LGL.startingpoint</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>3</size>
								<maxitems>22</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>
						</TCEforms>
					</pidlist>

					<!-- recursive field -->
					<recursive>
						<TCEforms>
							<label>LLL:EXT:lang/locallang_general.php:LGL.recursive</label>
							<config>

							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0"></numIndex>
									<numIndex index="1">0</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">LLL:EXT:cms/locallang_ttc.php:recursive.I.1</numIndex>
									<numIndex index="1">1</numIndex>
								</numIndex>
								<numIndex index="2" type="array">
									<numIndex index="0">LLL:EXT:cms/locallang_ttc.php:recursive.I.2</numIndex>
									<numIndex index="1">2</numIndex>
								</numIndex>
								<numIndex index="3" type="array">
									<numIndex index="0">LLL:EXT:cms/locallang_ttc.php:recursive.I.3</numIndex>
									<numIndex index="1">3</numIndex>
								</numIndex>
								<numIndex index="4" type="array">
									<numIndex index="0">LLL:EXT:cms/locallang_ttc.php:recursive.I.4</numIndex>
									<numIndex index="1">4</numIndex>
								</numIndex>
								<numIndex index="5" type="array">
									<numIndex index="0">LLL:EXT:cms/locallang_ttc.php:recursive.I.5</numIndex>
									<numIndex index="1">5</numIndex>
								</numIndex>
							</items>
							<default>0</default>

							</config>
						</TCEforms>
					</recursive>

					<savepage>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.php:flexform.tab_config.savepage</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>
						</TCEforms>
					</savepage>				
				

					<!-- lightMode field -->
					<mergeSearchResults>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_config.mergeSearchResults</label>
							<displayCond>EXT:pp_searchengine:LOADED:true</displayCond>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</mergeSearchResults>				


				</el>
			</ROOT>
		</configuration>
		
		<display>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_display</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<!-- max topics field -->
					<maxTopics>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_display.maxTopics</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<default>5</default>
							</config>
						</TCEforms>
					</maxTopics>				

					<!-- max message field -->
					<maxMessages>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_display.maxMessages</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<default>5</default>
							</config>
						</TCEforms>
					</maxMessages>

					<!-- max pages field -->
					<pageRange>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_display.pageRange</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<default>5</default>
							</config>
						</TCEforms>
					</pageRange>

					<!-- csstemplate field -->
					<csstemplate>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_display.csstemplate</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_display.csstemplate.macmade</numIndex>
										<numIndex index="1">macmade</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_display.csstemplate.green</numIndex>
										<numIndex index="1">green</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_display.csstemplate.archetype</numIndex>
										<numIndex index="1">archetype</numIndex>
									</numIndex>
								</items>
								<default>macmade</default>
							</config>
						</TCEforms>
					</csstemplate>

					<!-- lightMode field -->
					<lightMode_def>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_display.lightMode_def</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</lightMode_def>				

					<!-- printStats field -->
					<printStats>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_display.printStats</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</printStats>				
				</el>
			</ROOT>
		</display>


		<tab_image>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_image</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<maxWidth>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_image.maxWidth</label>
							<config>
								<type>input</type>
								<default>180</default>
								<eval>trim,int</eval>
								<range>
									<lower>50</lower>
								</range>
							</config>
						</TCEforms>
					</maxWidth>				

					<maxHeight>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_image.maxHeight</label>
							<config>
								<type>input</type>
								<default>180</default>
								<eval>trim,int</eval>
								<range>
									<lower>50</lower>
								</range>
							</config>
						</TCEforms>
					</maxHeight>				

					<resizeImg>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_image.resizeImg</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</resizeImg>				

					<allowedExt>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_image.allowedExt</label>
							<config>
								<type>input</type>
								<default>gif,jpg,jpeg</default>
								<eval>trim</eval>
							</config>
						</TCEforms>
					</allowedExt>				
				</el>
			</ROOT>
		</tab_image>

		<tab_plugins>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_plugins</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<denyHooks>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_plugins.denyHooks</label>
							<config>
								<type>select</type>
								<maxitems>10000</maxitems>
								<size>5</size>

								<renderMode>checkbox</renderMode>
								<items type="array">
								</items>

								<itemsProcFunc>EXT:pp_lib/tceforms/class.tx_pplib_userfuncs.php:&amp;tx_pplib_userfuncs-&gt;addRegisteredHooks</itemsProcFunc>
								<extKey>pp_forum</extKey>
							</config>
						</TCEforms>
					</denyHooks>

				</el>
			</ROOT>
		</tab_plugins>

		<tab_rootForum>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:pp_forum/locallang_db.xml:flexform.tab_rootForum</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<force_language>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.force_language</label>
							<config>
								<type>input</type>
								<size>30</size>
								<max>10</max>	
							</config>
						</TCEforms>
					</force_language>

					<readaccess>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.readaccess</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>fe_groups</allowed>
								<size>5</size>
								<minitems>0</minitems>	
								<maxitems>10000</maxitems>	
							</config>
						</TCEforms>
					</readaccess>

					<writeaccess>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.writeaccess</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>fe_groups</allowed>
								<size>5</size>
								<minitems>0</minitems>	
								<maxitems>10000</maxitems>	
							</config>
						</TCEforms>
					</writeaccess>

					<guardaccess>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.guardaccess</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>fe_groups</allowed>
								<size>5</size>
								<minitems>0</minitems>	
								<maxitems>10000</maxitems>	
							</config>
						</TCEforms>
					</guardaccess>

					<adminaccess>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.adminaccess</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>fe_groups</allowed>
								<size>5</size>
								<minitems>0</minitems>	
								<maxitems>10000</maxitems>	
							</config>
						</TCEforms>
					</adminaccess>

					<newtopic_restrict>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.newtopic_restrict</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.basic.restrict.everybody</numIndex>
										<numIndex index="1">everybody</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.basic.restrict.guard</numIndex>
										<numIndex index="1">guard</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.basic.restrict.admin</numIndex>
										<numIndex index="1">admin</numIndex>
									</numIndex>
								</items>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</newtopic_restrict>

					<reply_restrict>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.reply_restrict</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.basic.restrict.everybody</numIndex>
										<numIndex index="1">everybody</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.basic.restrict.guard</numIndex>
										<numIndex index="1">guard</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.basic.restrict.admin</numIndex>
										<numIndex index="1">admin</numIndex>
									</numIndex>
								</items>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</reply_restrict>

					<edit_restrict>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.edit_restrict</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.basic.restrict.everybody</numIndex>
										<numIndex index="1">everybody</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.basic.restrict.guard</numIndex>
										<numIndex index="1">guard</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.basic.restrict.admin</numIndex>
										<numIndex index="1">admin</numIndex>
									</numIndex>
								</items>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</edit_restrict>

					<delete_restrict>
						<TCEforms>
							<label>LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.delete_restrict</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.basic.restrict.everybody</numIndex>
										<numIndex index="1">everybody</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:pp_forum/locallang_db.xml:tx_ppforum_forums.basic.restrict.guard</numIndex>
										<numIndex index="1">guard</numIndex>
